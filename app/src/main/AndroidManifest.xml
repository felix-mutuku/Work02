<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ke.co.ekenya.www.brooksidedairy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.IntroScreenActivity" />
        <activity android:name=".Activities.SignInActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activities.ForgotPasswordActivity" />
        <activity android:name=".Activities.SignUpOneActivity" />
        <activity android:name=".Activities.SignUpTwoActivity" />
        <activity android:name=".Activities.SignUpWaitingActivity" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.ReportModuleActivity" />
        <activity android:name=".Activities.ReportModuleCriteriaActivity"></activity>
    </application>

</manifest>